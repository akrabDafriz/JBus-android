<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RegisterRenterActivity">

    <TextView
        android:id="@+id/titleJBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/cottoncandy"
        android:gravity="center"
        android:text="JBus"
        android:textColor="#00A36C"
        android:textSize="96sp"
        android:typeface="monospace"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/buspngreg"
        android:layout_width="199dp"
        android:layout_height="72dp"
        android:layout_below="@id/titleJBus"
        app:layout_constraintEnd_toEndOf="@+id/titleJBus"
        app:layout_constraintStart_toStartOf="@+id/titleJBus"
        app:layout_constraintTop_toBottomOf="@+id/titleJBus"
        app:srcCompat="@drawable/bus_clipart" />

    <TextView
        android:id="@+id/registerYour"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:text="Register your company"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/renterBG"
        app:layout_constraintStart_toStartOf="@+id/renterBG"
        app:layout_constraintTop_toTopOf="@+id/renterBG" />

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="Please fill the required fields"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/registerYour"
        app:layout_constraintTop_toBottomOf="@+id/registerYour" />

    <ImageView
        android:id="@+id/renterBG"
        android:layout_width="307dp"
        android:layout_height="341dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buspngreg"
        app:srcCompat="@drawable/rounded_edit_text" />

    <EditText
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Company Name"
        android:textSize="22sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/renterBG"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="@+id/renterBG"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Address"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/companyName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/companyName"
        app:layout_constraintTop_toBottomOf="@+id/companyName" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Phone Number"
        android:textSize="22sp"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <Button
        android:id="@+id/registerRenterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4682B4"
        android:text="Register"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/renterBG"
        app:layout_constraintStart_toStartOf="@+id/renterBG"
        app:layout_constraintTop_toBottomOf="@+id/renterBG" />


</androidx.constraintlayout.widget.ConstraintLayout>