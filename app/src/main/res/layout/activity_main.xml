<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/titleJBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/cottoncandy"
        android:text="JBus"
        android:textColor="#00A36C"
        android:textSize="96sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buspngreg"
        android:layout_width="199dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/titleJBus"
        app:layout_constraintStart_toStartOf="@+id/titleJBus"
        app:layout_constraintTop_toBottomOf="@+id/titleJBus"
        app:srcCompat="@drawable/bus_clipart" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="302dp"
        android:layout_height="89dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/captainmeredith"
        android:text="Bang gw lagi sedih bang"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buspngreg"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/buspngreg"
        app:layout_constraintTop_toBottomOf="@+id/buspngreg"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>